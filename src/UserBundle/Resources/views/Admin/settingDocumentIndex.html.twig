                                 <th data-hide="phone"></th>

                             </tr>
                             </thead>
                             <tbody>
                             {% for entity in entities %}
                                 <tr>
                                     <td>
                                         {{ entity.id }}
                                     </td>
                                     <td>
                                         {{ entity.empCode }}
                                     </td>
                                     <td>
                                         {{ entity.name }}
                                     </td>
                                     <td>
                                         {{ entity.lastname }}
                                     </td>
                                     <td >
                                         <a class="btn btn-warning btn-sm" href="{{ path('admin_emp_edit',{'id':entity.id})}}" >                                             edit

                                         </a>
                                         <a class="btn btn-danger btn-sm" href="{{ path('admin_emp_edit',{'id':entity.id})}}" >
                                             delete

                                         </a>
                                     </td>

                                 </tr>
                             {% endfor %}

                             </tbody>

                         </table>

                     </div>

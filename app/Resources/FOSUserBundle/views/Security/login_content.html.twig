{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post" class="smart-form client-form" style="">

    <fieldset>

        <section>

            <label class="input">


                <label for="username">{{ 'security.login.username'|trans }}</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                <b class="tooltip tooltip-top-right"> Please enter email address/username</b></label>
        </section>

        <section>

            <label class="input">
                <label for="password">{{ 'security.login.password'|trans }}</label>
                <input type="password" id="password" name="_password" required="required" />
                <b class="tooltip tooltip-top-right">Enter your password</b> </label>
            <div class="note">
                <a href="forgotpassword.html">
                    {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    {% endif %}
                    </a>
            </div>
        </section>

        <!--<section>
            <label class="checkbox">
          <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                <i></i>Stay signed in
            </label>
        </section>-->
    </fieldset>
    <footer>
        <label class="button" style="margin-right:30%;"> SUBMIT
        <input style="display: none;" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
        </label>

    </footer>


</form>
